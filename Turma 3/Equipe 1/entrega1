#include <stdio.h>

void adicionarTarefa();
void removerTarefa();
void listarTarefas();
void inicializarLista();

int main() {
    int opcao;

    inicializarLista();

    do {
        printf("\nMENU DE TAREFAS\n");
        printf("1. Adicionar Tarefa\n");
        printf("2. Remover Tarefa\n");
        printf("3. Listar Tarefas\n");
        printf("0. Sair\n");
        printf("Escolha uma opção: ");
        scanf("%d", &opcao);

        if (opcao == 1) {
            adicionarTarefa();
        }
        else if (opcao == 2) {
            removerTarefa();
        }
        else if (opcao == 3) {
            listarTarefas();
        }
        else if (opcao == 0) {
            printf("Saindo...\n");
        }
        else {
            printf("Opção inválida. Tente novamente.\n");
        }

    } while(opcao != 0);

    return 0;
}
